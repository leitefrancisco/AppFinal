<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppFinal.Views.Games"
             xmlns:vm="clr-namespace:AppFinal.ViewModels"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="This is the Games"/>
            <Button
                VerticalOptions="Center"
                Text="Open Game - Treasure Hunt"
                TextColor="Black"
                BackgroundColor="Transparent"
                BorderColor="Green"
                BorderWidth="1.5"
                CornerRadius="50">
                <!--Clicked = "Open_Game"-->
                
            </Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>